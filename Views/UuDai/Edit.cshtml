@model EC08_SHBS.Models.UuDai
@{
    ViewBag.Title = "Cập Nhật Ưu Đãi";
    Layout = "~/Views/Shared/LayoutAdmin/_MasterpageAdmin.cshtml";
}

<h2>Cập Nhật Ưu Đãi</h2>
<div class="clear">
</div>
<!-- End .clear -->
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3 style="cursor: s-resize;">
            Thông Tin Ưu Đãi</h3>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1" style="display: block;">
            @using (Html.BeginForm())
            {
                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                    <tbody>
                        <tr>
                            <th valign="top">
                                Tên Ưu Đãi:
                            </th>
                            <td>
                                @Html.TextBoxFor(c => c.tenUuDai, new { @class = "inp-form" })
                                @Html.ValidationMessageFor(c => c.tenUuDai)
                            </td>
                            <th valign="top">
                                Tình Trạng:
                            </th>
                            <td>
                                @Html.TextBoxFor(c => c.tinhTrang, new { @class = "inp-form" })
                                @Html.ValidationMessageFor(c => c.tinhTrang)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                &nbsp;
                            </th>
                            <td valign="top">
                                <input type="submit" value="" class="form-submit">
                                <a href="@Url.Content("~/uudai/index")">
                                    <input type="button" value="" class="form-reset" /></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
    </div>
    <!-- End .content-box-content -->
</div>
