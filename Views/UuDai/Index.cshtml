@model IEnumerable<EC08_SHBS.Models.UuDai>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin/_MasterpageAdmin.cshtml";
}

<h2>QUẢN LÝ ƯU ĐÃI</h2>
<div class="clear">
    <ul class="shortcut-buttons-set">
        <li>
        <a class="shortcut-button" href="@Url.Content("~/uudai/create")"><span>
            <img src="@Url.Content("~/Content/admin/images/icons/paper_content_pencil_48.png")" alt="icon"><br>
            Thêm Mới </span></a></li>
    </ul>
</div>
<div class="clear"></div>
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3 style="cursor: s-resize;">
            Thông Tin Ưu Đãi</h3>
        <div class="clear">
        </div>
    </div>                
    <!-- End .content-box-header -->
    <div class="content-box-content ">
        <div class="tab-content default-tab" id="tab1" style="display: block;">
            <table>
                <thead>
                    <tr>
                        <th>
                            Mã Ưu Đãi
                        </th>
                        <th>
                            Tên Ưu Đãi
                        </th>
                        <th>
                            Tình Trạng
                        </th>
                    </tr>
                </thead>
                
                @{int i = 0;}
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr class="@(i++ % 2 == 0 ? "alt-row" : "")">
                            <td>
                                @item.idUuDai
                            </td>
                            <td>
                                @item.tenUuDai
                            </td>
                            <td>
                                @item.tinhTrang
                            </td>
                            <td>
                                <!-- Icons -->
                                <a href="@Url.Content("~/uudai/edit/")@item.idUuDai" title="Edit">
                                    <img src="@Url.Content("~/Content/admin/images/icons/hammer_screwdriver.png")" alt="Edit"></a>
                                <a href="@Url.Content("~/uudai/delete/")@item.idUuDai" title="Delete">
                                    <img src="@Url.Content("~/Content/admin/images/icons/cross.png")" alt="Delete"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>  
   </div>
