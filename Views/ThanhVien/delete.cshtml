@model EC08_SHBS.Models.NguoiDung
@{
    ViewBag.Title = "Xóa người dùng";
    Layout = "~/Views/Shared/LayoutAdmin/_MasterpageAdmin.cshtml";
}

<h2>Xóa Người Dùng</h2>
<div class="clear">
</div>
<!-- End .clear -->
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3 style="cursor: s-resize;">Thông Tin Người Dùng</h3>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1" style="display: block;">
            @using (Html.BeginForm())
            {
                <table border="0" cellpadding="0" cellspacing="0" id="id-form">
                    <tbody>
                        <tr>
                            <th valign="top" style="width: 200px">Bạn có muốn xóa ưu đãi này ?
                            </th>
                        </tr>
                        <th>&nbsp;
                        </th>
                        <td valign="top">
                            <input type="submit" value="" class="form-submit">
                            @if (@Model.loaiND == 1)
                            {
                                <a href="@Url.Content("~/thanhvien/nguoidung")">
                                    <input type="button" value="" class="form-reset" />
                                </a>
                            }
                            else if (@Model.loaiND==2)
                            {
                                <a href="@Url.Content("~/thanhvien/quantri")">
                                    <input type="button" value="" class="form-reset" />
                                </a>
                            }
                           
                        </td>
                    </tbody>
                </table>
            }
        </div>
    </div>
    <!-- End .content-box-content -->
</div>
