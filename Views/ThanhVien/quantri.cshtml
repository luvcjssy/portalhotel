@model IEnumerable<EC08_SHBS.Models.NguoiDung>
@{
    ViewBag.Title = "Quản trị viên";
    Layout = "~/Views/Shared/LayoutAdmin/_MasterpageAdmin.cshtml";
}

<h2>TÀI KHOẢN QUẢN TRỊ</h2>
<div class="clear">
</div>
<div class="clear"></div>
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3 style="cursor: s-resize;">Thông Tin người dùng</h3>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content ">
        <div class="tab-content default-tab" id="tab1" style="display: block;">
            <table>
                <thead>
                    <tr>
                        <th>Mã người dùng</th>
                        <th>Họ tên</th>
                        <th>Địa chỉ</th>
                        <th>Điện thoại</th>
                        <th>Username</th>
                        @*<th>Password</th>*@
                        <th>Email</th>
                    </tr>
                </thead>

                @{int i = 0;}
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(i++ % 2 == 0 ? "alt-row" : "")">
                            <td>
                                @item.IdNguoiDung
                            </td>
                            <td>
                                @item.hoTen
                            </td>
                            <td>
                                @item.diaChi
                            </td>
                            <td>
                                @item.dienThoai
                            </td>
                            <td>
                                @item.userName
                            </td>
                            @*<td>
                                @item.passWord
                            </td>*@
                            <td>
                                @item.eMail
                            </td>
                            <td>
                                <!-- Icons -->
                               @* <a href="@Url.Content("~/thanhvien/edit/")@item.IdNguoiDung" title="Edit">
                                    <img src="@Url.Content("~/Content/admin/images/icons/hammer_screwdriver.png")" alt="Edit"></a>*@
                                <a href="@Url.Content("~/thanhvien/delete/")@item.IdNguoiDung" title="Delete">
                                    <img src="@Url.Content("~/Content/admin/images/icons/cross.png")" alt="Delete"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
