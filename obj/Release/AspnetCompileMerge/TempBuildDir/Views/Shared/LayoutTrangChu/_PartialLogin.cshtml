@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    
    <div>
        <a href='#'><span style="color: white">@User.Identity.Name</span></a>

        <ul>
            @if (@User.IsInRole("User"))
            {
                <li><a href="@Url.Action("info", "home")"><span>Thông tin cá nhân</span></a></li>
                <li><a href="@Url.Action("bookingdetail", "home")"><span>Danh sách đặt phòng</span></a></li>
            }
            @if (@User.IsInRole("Admin"))
            {
                <li><a href="@Url.Action("index", "admin")"><span>Trang quản lý</span></a></li>
            }
            <li><a href="@Url.Action("logout", "home")"><span>Đăng xuất</span></a></li>
        </ul>
    </div>
}
else
{
    
    @Html.ActionLink("Đăng nhập", "login", "home")
    
}